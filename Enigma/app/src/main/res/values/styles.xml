<resources>

    <!-- Base application theme. -->
    <style name="EniBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Inverse</item>
        <item name="android:expandableListPreferredItemPaddingLeft">0dp</item>
        <item name="android:expandableListPreferredChildPaddingLeft">0dp</item>
        <item name="android:scrollingCache">false</item>
        <item name="actionBarStyle">@style/EniTheme.ActionBarStyle</item>
        <item name="android:actionMenuTextColor">@color/toolbar_title</item>
        <item name="actionMenuTextColor">@color/toolbar_title</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="EniTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/EniTheme.titleTextStyle</item>
        <item name="titleTextStyle">@style/EniTheme.titleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EniTheme.titleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/toolbar_title</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="EniTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <!--TextView style-->
    <style name="Eni.TextViewBase" parent="android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Eni.Login.TextView12sp" parent="Eni.TextViewBase">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:layout_marginTop">@dimen/login_text_margin_top</item>
    </style>

    <!--EditText style-->
    <style name="Eni.EditTextBase" parent="android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Eni.Login.EditText.Text15sp" parent="@style/Eni.EditTextBase">
        <item name="android:textColor">@color/login_editText_text</item>
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <style name="Eni.Login.CheckBox.ShowPassword" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/login_checkbox_checked_background</item>
        <item name="colorAccent">@color/login_checkbox_unChecked_background</item>
        <item name="android:textColorSecondary">@color/login_checkbox_unChecked_background</item>
    </style>


</resources>
