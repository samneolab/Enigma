<resources>

    <!-- Base application theme. -->
    <style name="EniBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Inverse</item>
        <item name="android:expandableListPreferredItemPaddingLeft">0dp</item>
        <item name="android:expandableListPreferredChildPaddingLeft">0dp</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:actionMenuTextColor">@color/toolbar_title</item>
        <item name="actionMenuTextColor">@color/toolbar_title</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="EniTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <!--TextView style-->
    <style name="Eni.TextViewBase" parent="android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Eni.Login.TextView12sp" parent="Eni.TextViewBase">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:layout_marginTop">@dimen/login_text_margin_top</item>
    </style>

    <!--EditText style-->
    <style name="Eni.EditTextBase" parent="android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Eni.Login.EditText.Text15sp" parent="@style/Eni.EditTextBase">
        <item name="android:textColor">@color/login_editText_text</item>
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:background">@drawable/edittext_white_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--CheckBox style-->
    <style name="Eni.Login.CheckBox.ShowPassword" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/login_checkbox_checked_background</item>
        <item name="colorAccent">@color/login_checkbox_unChecked_background</item>
        <item name="android:textColorSecondary">@color/login_checkbox_unChecked_background</item>
    </style>

    <!--AVLoadingIndicatorView style-->
    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>


    <style name="top_dialog_announcement_animation">
        <item name="android:windowEnterAnimation">@anim/top_announcement_fade_in</item>
        <item name="android:windowExitAnimation">@anim/top_announcement_fade_out</item>
    </style>
</resources>
