<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <gradient android:angle="270" android:endColor="@color/login_button_login_disable" android:startColor="@color/login_button_login_disable" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/login_button_login_radius"/>
            <gradient android:angle="270" android:endColor="@color/login_button_login_enable" android:startColor="@color/login_button_login_enable" />
        </shape>
    </item>

</selector>